# AION AI Agent Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================

# BSC Configuration (Primary)
RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
CHAIN_ID=97
NETWORK=testnet

# Hedera Configuration (Enhanced Integration)
HEDERA_NETWORK=testnet
HEDERA_RPC_URL=https://testnet.hashio.io/api
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_HEDERA_PRIVATE_KEY_HERE

# ============================================================================
# CONTRACT ADDRESSES
# ============================================================================

# BSC Contract Addresses (Deployed)
AIONVAULT_ADDRESS=0x4625bB7f14D4e34F9D11a5Df7566cd7Ec1994849
STRATEGY_VENUS_ADDRESS=0x20F3880756be1BeA1aD4235692aCfbC97fAdfDa5

# Hedera Service IDs (Auto-generated during setup)
HCS_TOPIC_ID=0.0.YOUR_HCS_TOPIC_ID
HCS_AUDIT_TOPIC_ID=0.0.YOUR_AUDIT_TOPIC_ID
HFS_BRIDGE_FILE_ID=0.0.YOUR_BRIDGE_FILE_ID
HFS_MODEL_FILE_ID=0.0.YOUR_MODEL_FILE_ID
HTS_SHARE_TOKEN_ID=0.0.YOUR_SHARE_TOKEN_ID
VAULT_CONTRACT_ID=0.0.YOUR_VAULT_CONTRACT_ID

# ============================================================================
# WALLET CONFIGURATION
# ============================================================================

# Primary Wallet (DO NOT COMMIT REAL PRIVATE KEY)
PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=0x14D7795A2566Cd16eaA1419A26ddB643CE523655

# Test Accounts (Auto-generated during setup)
TREASURY_ACCOUNT_ID=0.0.YOUR_TREASURY_ACCOUNT
TREASURY_PRIVATE_KEY=YOUR_TREASURY_PRIVATE_KEY
AI_AGENT_ACCOUNT_ID=0.0.YOUR_AI_AGENT_ACCOUNT
AI_AGENT_PRIVATE_KEY=YOUR_AI_AGENT_PRIVATE_KEY
USER1_ACCOUNT_ID=0.0.YOUR_USER1_ACCOUNT
USER1_PRIVATE_KEY=YOUR_USER1_PRIVATE_KEY
USER2_ACCOUNT_ID=0.0.YOUR_USER2_ACCOUNT
USER2_PRIVATE_KEY=YOUR_USER2_PRIVATE_KEY

# ============================================================================
# API CONFIGURATION
# ============================================================================

PORT=3001
NODE_ENV=development

# Cross-Chain Bridge Configuration
BRIDGE_ENABLED=true
BRIDGE_MIN_AMOUNT=1000000000000000000
BRIDGE_MAX_AMOUNT=1000000000000000000000
BRIDGE_FEE=10000000000000000

# ============================================================================
# AI & MEMORY CONFIGURATION
# ============================================================================

# Memory Configuration
MEMORY_FILE_PATH=./memory.json
MEMBASE_URL=https://api.membase.io

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
CHROMA_URL=http://localhost:8000

# AI Model Configuration
AI_MODEL_VERSION=v2.1.0
AI_DECISION_CONFIDENCE_THRESHOLD=0.8
AI_REBALANCE_INTERVAL=3600000

# ============================================================================
# EXTERNAL API KEYS
# ============================================================================

# BscScan API (for verification)
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Hedera Mirror Node API
HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Price Oracle APIs
COINGECKO_API_KEY=your_coingecko_api_key_here
BINANCE_API_KEY=your_binance_api_key_here
DEFILLAMA_API_KEY=your_defillama_api_key_here

# ============================================================================
# DATABASE & CACHING
# ============================================================================

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aion_db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_CONSOLE_LOGS=true

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Test Configuration
MIN_TEST_BALANCE=100000000000000000000
VERIFICATION_TIMESTAMP=
TOTAL_TEST_ACCOUNTS=
TEST_ACCOUNTS_CREATED=

# Development Flags
DEBUG_MODE=false
ENABLE_TESTNETS=true
MOCK_EXTERNAL_APIS=false

# Setup Tracking
SETUP_VERSION=2.0.0
SERVICES_CREATED=
LAST_UPDATED= 