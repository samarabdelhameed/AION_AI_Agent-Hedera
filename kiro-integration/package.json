{
  "name": "@aion/kiro-integration",
  "version": "1.0.0",
  "description": "AION x Kiro Integration for Hackathon - AI-powered DeFi development tools",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "install:all": "npm install && cd mcp-tools && npm install && cd ../ai-code-generator && npm install && cd ../developer-tools && npm install",
    "start:mcp": "cd mcp-tools && npm start",
    "start:generator": "cd ai-code-generator && npm start",
    "start:all": "concurrently \"npm run start:mcp\" \"npm run start:generator\"",
    "test": "npm run test:mcp && npm run test:generator",
    "test:mcp": "cd mcp-tools && npm test",
    "test:generator": "cd ai-code-generator && npm test",
    "demo": "node demo/run-demo.js",
    "setup": "npm run install:all && npm run setup:kiro",
    "setup:kiro": "echo 'ðŸ“‹ Copy kiro-config.json to your Kiro settings directory'",
    "build": "npm run build:mcp && npm run build:generator",
    "build:mcp": "cd mcp-tools && npm run build",
    "build:generator": "cd ai-code-generator && npm run build",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "clean": "rm -rf node_modules */node_modules",
    "docs": "npm run docs:generate && npm run docs:serve",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:serve": "python3 -m http.server 8080 -d docs"
  },
  "keywords": [
    "aion",
    "kiro",
    "defi",
    "ai",
    "mcp",
    "blockchain",
    "smart-contracts",
    "yield-farming",
    "hackathon",
    "developer-tools"
  ],
  "author": "Samar Abdelhameed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samarabdelhameed/AION_AI_Agent.git",
    "directory": "kiro-integration"
  },
  "bugs": {
    "url": "https://github.com/samarabdelhameed/AION_AI_Agent/issues"
  },
  "homepage": "https://github.com/samarabdelhameed/AION_AI_Agent/tree/main/kiro-integration",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "@types/node": "^20.11.0"
  },
  "dependencies": {
    "dotenv": "^16.4.0"
  },
  "workspaces": [
    "mcp-tools",
    "ai-code-generator", 
    "developer-tools"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/samarabdelhameed"
  }
}